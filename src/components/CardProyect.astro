---
import s from '../styles/components/CardProyect.module.scss'
import Github from '../assets/github.astro';
import IconLink from '../assets/link.astro';
import Skill from './Skill.astro';
const { repo, title, body, image, tools, deploy } = Astro.props;
---

<article class={s.card}>
  <header>
    <h3>{title}</h3>
    <p>{body}</p>
  </header>

  <a href={deploy}><img class={s.image}src={image} alt={title} /></a>
  <h4>Technologies</h4>
  <div class='skills'>
    {tools.map(tool=><Skill content={tool}/>)}
  </div>

  <div class="links" >
    <a href={repo}>
      <Github height='24' width='24'/>
    </a>
    <a href={deploy}>
      <IconLink height='24' width='24' color='white'/>
    </a>
  </div>
</article>

<style>
  .links a{
    padding-right: 1rem;
  }
</style>
